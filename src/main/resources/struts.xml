<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>

    <!-- 默认访问页面 -->
    <package name="hello" extends="struts-default">
        <!--        uri /hello example1 hello word-->
        <action name="hello" class="org.chiangkai.action.HelloAction">
            <result name="success">/view/hello.jsp</result>
        </action>
        <!--        uri /form example2 form 传参-->
        <action name="form" class="org.chiangkai.action.FormAction">
            <result name="success">/view/form.jsp</result>
        </action>
    </package>


</struts>